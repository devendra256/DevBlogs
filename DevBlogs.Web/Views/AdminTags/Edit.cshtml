@model DevBlogs.Web.Models.ViewModels.EditTagRequest

<div class="bg-secondary bg-opacity-10 py-3">
	<div class="container">
		<h1>Edit Tag - Admin</h1>
	</div>
</div>

<div class="container">
	<form method="post">
		<div class="mb-3">
			<label class="form-label">Id</label>
			<input type="text" class="form-control" value="@Model.Id" asp-for="@Model.Id" readonly />
		</div>

		<div class="mb-3">
			<label class="form-label">Name</label>
			<input type="text" class="form-control" value="@Model.Name" asp-for="@Model.Name" />
		</div>

		<div class="mb-3">
			<label class="form-label">Display Name</label>
			<input type="text" class="form-control" value="@Model.DisplayName" asp-for="@Model.DisplayName" />
		</div>

		<div class="mb-3">
			<div class="d-flex">
				<button class="btn btn-dark" type="submit" asp-area="" asp-controller="AdminTags" asp-action="Edit">Update</button>
				<button class="btn btn-danger ms-3" type="submit" asp-area="" asp-controller="AdminTags" asp-action="Delete">Delete</button>
			</div>
		</div>

	</form>
</div>