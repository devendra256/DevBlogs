@model DevBlogs.Web.Models.ViewModels.AddTagRequest

<div class="bg-secondary bg-opacity-10 py-3">
	<div class="container">
		<h1>Add Tag - Admin</h1>
	</div>
</div>

<div class="container my-5">
	<form method="post">
		<div class="mb-3">
			<label class="form-label">Name</label>
			<input type="text" class="form-control" id="name" asp-for="Name" required />
			<span class="text-danger" asp-validation-for="Name"></span>
		</div>

		<div class="mb-3">
			<label class="form-label">Display Name</label>
			<input type="text" class="form-control" id="displaName" asp-for="DisplayName" required />
			<span class="text-danger" asp-validation-for="DisplayName"></span>
		</div>

		<div class="mb-3">
			<input type="submit" class="btn btn-dark" />
		</div>

	</form>
</div>